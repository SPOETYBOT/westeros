external:
	mkdir -p external
	mkdir -p external/install
	
external/.pkgconfig:	
	$(call setenv) && \
	cd external && \
	git clone git://anongit.freedesktop.org/pkg-config && \
	cd pkg-config && \
	git checkout pkg-config-0.29 && \
	./autogen.sh --prefix $(WID) --no-configure && \
	./configure --prefix $(WID) --with-internal-glib && \
	make && make install && \
	cd .. && \
	touch .pkgconfig

